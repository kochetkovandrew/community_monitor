<h4>Скрытые и удалённые друзья</h4>

<%= render 'views' %>

<h5>Скрытые друзья</h5>
<table class="friends_info">
  <thead>
  <tr>
    <th>Имя</th>
    <th>Город</th>
    <th>Дата рождения</th>
    <th>Последнее посещение</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @hidden_friends.each do |friend| %>
      <tr>
        <%= render partial: 'friend_info', locals: {friend: friend} %>
      </tr>
  <% end %>
  </tbody>
</table>
<h5>В скрытых друзьях у</h5>
<table class="friends_info">
  <thead>
  <tr>
    <th>Имя</th>
    <th>Город</th>
    <th>Дата рождения</th>
    <th>Последнее посещение</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @hidden_friend_of.each do |friend| %>
      <tr>
        <%= render partial: 'friend_info', locals: {friend: friend} %>
      </tr>
  <% end %>
  </tbody>
</table>
