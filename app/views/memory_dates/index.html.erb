<p id="notice"><%= notice %></p>

<h1>Listing Memory Dates</h1>

<table class="table">
  <thead>
    <tr>
      <th>Год</th>
      <th>Месяц</th>
      <th>День</th>
      <th>Тип</th>
      <th>Текст</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memory_dates.each do |memory_date| %>
      <tr>
        <td><%= memory_date.year %></td>
        <td><%= Date::MONTHNAMES[memory_date.month] %></td>
        <td><%= memory_date.day %></td>
        <td><%= MemoryDate::KINDS[memory_date.kind] %></td>
        <td><%= memory_date.description %></td>
        <td><%= link_to 'Show', memory_date %></td>
        <td><%= link_to 'Edit', edit_memory_date_path(memory_date) %></td>
        <td><%= link_to 'Destroy', memory_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

