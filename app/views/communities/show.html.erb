<h4>Информация о сообществе</h4>

<p id="notice"><%= notice %></p>

<div style="width: 49%; float: left;">
  <table class="table table-striped">
    <thead>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </thead>
    <tr>
      <td>Короткое имя:</td>
      <td><%= @community.screen_name %></td>
    </tr>
    <tr>
      <td>VK ID:</td>
      <td><%= @community.vk_id %></td>
    </tr>
    <tr>
      <td>Название:</td>
      <td><%= @community.name %></td>
    </tr>
  </table>
</div>

<div style="width: 49%; float: right;">
  <table class="table table-striped">
    <thead>
      <th>Время (UTC)</th>
      <th>Участников</th>
      <th>&nbsp;</th>
    </thead>
    <% @community.community_member_histories.order('created_at desc').limit(10).each do |history| %>
      <tr>
        <td>
          <%= history.created_at %>
        </td>
        <td><%= history.members_count %></td>
        <td><%= link_to 'Изменения', controller: :community_member_histories, action: :diff, id: history.id %></td>
      </tr>
    <% end %>
  </table>
</div>

<div style="clear: both;">
  <%= link_to('Назад', :back, class: 'btn btn-default btn-sm') %>
</div>
