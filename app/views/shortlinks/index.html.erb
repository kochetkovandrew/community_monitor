<p id="notice"><%= notice %></p>

<h1>Короткие ссылки</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Ссылка</th>
      <th>Короткая ссылка</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shortlinks.each do |shortlink| %>
      <tr>
        <td><%= shortlink.link %></td>
        <td><%= link_to 'Ссылка', shortlink.short %></td>
        <td><%= link_to 'Показать', shortlink %></td>
        <td><%= link_to 'Редактировать', edit_shortlink_path(shortlink) %></td>
        <td><%= link_to 'Удалить', shortlink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая ссылка', new_shortlink_path %>
