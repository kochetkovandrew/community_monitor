<div class="narrow_column_wrap">
  <div class="narrow_column" id="narrow_column" style="margin-top: 0px;">
    <div class="page_block ui_rmenu ui_rmenu_pr" id="wall_rmenu" role="list">
      <a class="ui_ownblock clear_fix" href="/vichnet">
        <img class="ui_ownblock_img" src="<%= @members_map[@post.raw['from_id']].nil? ? 'https://vk.com/images/camera_50.png' : @members_map[@post.raw['from_id']][:avatar] %>">
        <div class="ui_ownblock_info">
          <div class="ui_ownblock_label"><%= @members_map[@post.raw['from_id']].nil? ? '' : @members_map[@post.raw['from_id']][:full_name] %></div>
          <div class="ui_ownblock_hint">вернуться к странице</div>
        </div>
      </a><div class="ui_rmenu_sep"></div><a id="ui_rmenu_own" class="ui_rmenu_item _ui_item_own">
      <span>Записи сообщества</span>
    </a><a id="ui_rmenu_all" class="ui_rmenu_item _ui_item_all">
      <span>Все записи</span>
    </a><a id="ui_rmenu_search" class="ui_rmenu_item _ui_item_search">
      <span>Поиск по записям</span>
    </a><a id="ui_rmenu_one" class="ui_rmenu_item _ui_item_one ui_rmenu_item_sel">
      <span>Запись на стене</span>
    </a>
      <div class="ui_rmenu_slider _ui_rmenu_slider"></div>
    </div>
  </div>
</div>
<div class="wide_column_wrap">
  <div class="wide_column" id="wide_column">
    <div class="wall_wrap clear_fix">
      <div class="big_wall">
        <div class="wall_module">
          <div id="page_wall_posts" class="mark_top_verified ">
            <div class="_post post page_block closed_comments deep_active">
            <div class="_post_content">








<div class="post_header">
  <a class="post_image" href="/vichnet">
    <img src="<%= @members_map[@post.raw['from_id']].nil? ? 'https://vk.com/images/camera_50.png' : @members_map[@post.raw['from_id']][:avatar] %>" data-post-click-type="post_owner_img" width="50" height="50" class="post_img">
    <span class="blind_label">.</span>
  </a>

  <div class="post_header_info">
    <h5 class="post_author">
      <a class="author" data-post-click-type="post_owner_link">
        <%= @members_map[@post.raw['from_id']].nil? ? '' : @members_map[@post.raw['from_id']][:full_name] %>
      </a>
      <span class="explain"><span class="wall_fixed_label">&nbsp;запись закреплена</span></span></h5>
    <div class="post_date"><a class="post_link">
      <span class="rel_date"><%= @post.created_at.to_vk_time('Europe/Moscow')%></span>
    </a></div>
    <div class="ui_actions_menu_wrap _ui_menu_wrap">
      <div class="ui_actions_menu_icons" tabindex="0" aria-label="Действия" role="button"><span class="blind_label">Действия</span></div>
      <div class="ui_actions_menu _ui_menu"><a class="ui_actions_menu_item" tabindex="0" role="link">Пожаловаться</a></div>
    </div>
  </div>
</div>
<div class="post_content">
  <div class="post_info">

    <div class="wall_text">
      <div class="wall_post_cont _wall_post_cont">
        <div class="wall_post_text">
          <%= comment_body(@post.raw['text']) %>
        </div>

        <!-- 510 x 383 = 1 image -->
        <!-- 185 + 320 = 505 x 261-->
        <!--
        <div class="page_post_sized_thumbs  clear_fix" style="width: 510px; height: 261px;">
          <a style="width: 185px; height: 261px;background-image: url(https://pp.userapi.com/c830108/v830108333/1689ad/ZSGetp2xdtg.jpg);" class="page_post_thumb_wrap image_cover  page_post_thumb_last_row fl_l"></a>
          <a style="width: 320px; height: 261px;background-image: url(https://pp.userapi.com/c830108/v830108333/1689b5/I-1UMbb_ksM.jpg);" class="page_post_thumb_wrap image_cover  page_post_thumb_last_column page_post_thumb_last_row fl_l"></a>
        </div>-->
      </div>
    </div>

    <div class="like_wrap">
      <div class="like_cont ">
        <div class="like_btns">
          <a class="like_btn like _like" data-count="8" href="#" title="Нравится">
            <div class="like_button_icon"></div>
            <div class="like_button_label"></div>
            <div class="like_button_count"><%= (@post.likes.try(:count) || '') %></div>
            <span class="blind_label">Нравится</span>
          </a>
          <span class="blind_label" tabindex="0" role="link">Показать список оценивших</span>
          <a class="like_btn share _share" data-count="2" href="#" title="Поделиться">
            <div class="like_button_icon"></div>
            <div class="like_button_label"></div>
            <div class="like_button_count"></div>
            <span class="blind_label">Поделиться</span>
          </a>
          <span class="blind_label" tabindex="0" role="link">Показать список поделившихся</span>

        </div>
        <div class="like_views _views"><!-- 2.2K --></div>

      </div>
    </div>

    <div class="post_replies_count"><%= @post.post_comments.count %> <%= t(:comment, count: @post.post_comments.count) %></div>

    <div class="replies">
      <div class="replies_wrap" style="">
        <div class="replies_list _replies_list">
          <% @post.post_comments.order(:created_at).each do |comment| %>
              <%= render partial: 'vk_comment', locals: {comment: comment} %>
          <% end %>
        </div>

      </div>
    </div>

  </div>
</div>

            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
